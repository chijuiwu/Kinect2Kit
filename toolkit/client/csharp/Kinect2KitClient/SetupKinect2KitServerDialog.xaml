<Window x:Class="Microsoft.Samples.Kinect.BodyBasics.SetupKinect2KitServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect2Kit Server" Height="150" Width="320" MinWidth="320" MinHeight="150" MaxWidth="320" MaxHeight="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="OK" IsDefault="True" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="74" FontSize="16" Margin="10,0,213,10" Click="OK_Click"/>
        <Button Grid.Row="0" Content="Cancel" IsCancel="True" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="74" FontSize="16" Margin="89,0,134,10"/>
        <Label Grid.Row="0" Content="Server IP Address" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Grid.Row="0" Content="Server Port" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Row="0" x:Name="entryIPAddress" HorizontalAlignment="Left" Height="23" Margin="112,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" />
        <TextBox Grid.Row="0" x:Name="entryPort" HorizontalAlignment="Left" Height="23" Margin="112,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
    </Grid>
</Window>
